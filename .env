# ProtonLumoAI Configuration
# Email Classification & Executive Summary Settings

# === IMAP Connection ===
PROTON_LUMO_IMAP_HOST=127.0.0.1
PROTON_LUMO_IMAP_PORT=1143
PROTON_LUMO_IMAP_USER=Awxzeca@pm.me
PROTON_LUMO_IMAP_PASSWORD=your_password_here

# === Perplexity API ===
PERPLEXITY_API_KEY=your_api_key_here
PROTON_LUMO_USE_LUMO=true

# === Processing Settings ===
PROTON_LUMO_DRY_RUN=false
PROTON_LUMO_UNSEEN_ONLY=true
PROTON_LUMO_MAX_EMAILS_PER_FOLDER=100
PROTON_LUMO_MAX_SPAM_TRASH=10
PROTON_LUMO_POLL_INTERVAL=60

# === Executive Summary Settings ===
# Enable/disable executive summary feature
PROTON_LUMO_SUMMARY_ENABLED=true

# Hours (24h format) when to generate summaries (comma-separated)
PROTON_LUMO_SUMMARY_HOURS=09,13,17

# Minimum importance score to be included (0-100)
PROTON_LUMO_SUMMARY_MIN_SCORE=30

# Output format: console, email, or both
PROTON_LUMO_SUMMARY_FORMAT=email

# Email address to send summaries to
PROTON_LUMO_SUMMARY_EMAIL=juli1.roche@gmail.com

# Target folder for executive summaries (will be created if not exists)
PROTON_LUMO_SUMMARY_FOLDER=Folders/Exec-Summary

# === Important Contacts (comma-separated emails) ===
# These contacts trigger +20 importance bonus
PROTON_LUMO_IMPORTANT_CONTACTS=brigitte.clavel@gmail.com,frederic.roche@gmail.com,robert.clavel@gmail.com,tibo.clavel@gmail.com,charles.roche@gmail.com,clavel.roche@proton.me,Paul.Deas@cirrus.com

# === Relocation Keywords (comma-separated) ===
# Messages containing these keywords get +10 importance bonus
PROTON_LUMO_RELOCATION_KEYWORDS=scotland,visa,relocation,edinburgh,currie,enrollment,school,immigration,accommodation,moving

# === Important Domains (comma-separated) ===
# Format: domain=score (e.g., cirrus.com=20)
PROTON_LUMO_IMPORTANT_DOMAINS=cirrus.com:20,iqaimmigration.com:15,scottsrelocation.co.uk:15,currie.edin.sch.uk:15

# === Logging ===
PROTON_LUMO_LOG_LEVEL=INFO
PROTON_LUMO_LOG_FILE=~/ProtonLumoAI/data/protonlumoai.log

# === Directories ===
PROTON_LUMO_CONFIG=~/ProtonLumoAI/config
PROTON_LUMO_DATA=~/ProtonLumoAI/data
PROTON_LUMO_MODELS=~/ProtonLumoAI/data/models

# === Feature Flags ===
PROTON_LUMO_ADAPTIVE_LEARNING=true
PROTON_LUMO_CHECKPOINT_ENABLED=true
PROTON_LUMO_CHECKPOINT_SAVE_INTERVAL=60
