# ProtonMail Bridge Configuration
# Configurez ces paramètres avec vos credentials ProtonMail
PROTON_BRIDGE_HOST=127.0.0.1
PROTON_BRIDGE_PORT=1143
PROTON_USERNAME=votre_email@protonmail.com
PROTON_PASSWORD=votre_bridge_password

# ProtonLumoAI Configuration
# Intervalle de polling en secondes (par défaut: 60s)
PROTON_LUMO_POLL_INTERVAL=60

# Intervalle d'amélioration automatique en secondes (par défaut: 3600s = 1h)
PROTON_LUMO_AUTO_IMPROVE_INTERVAL=3600

# Traiter uniquement les emails non-lus (par défaut: true)
PROTON_LUMO_UNSEEN_ONLY=true

# Mode dry-run (pas de modifications réelles, par défaut: false)
PROTON_LUMO_DRY_RUN=false

# Répertoire des logs
PROTON_LUMO_LOGS=~/ProtonLumoAI/logs

# Répertoire des données
PROTON_LUMO_DATA=~/ProtonLumoAI/data

# Classifier Configuration
CLASSIFIER_MODEL_PATH=~/ProtonLumoAI/data/classifier_model.pkl
CLASSIFIER_VECTORIZER_PATH=~/ProtonLumoAI/data/vectorizer.pkl
