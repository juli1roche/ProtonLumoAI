# ============================================================================
# ProtonLumoAI - Configuration Environment
# Copy this file to .env and fill in your values
# ============================================================================

# === IMAP Connection ===
# ProtonMail Bridge local connection (do NOT change these)
PROTON_BRIDGE_HOST=127.0.0.1
PROTON_BRIDGE_PORT=1143

# === ProtonMail Credentials ===
# CRITICAL: Use the password generated by ProtonMail Bridge, NOT your account password
# The script expects BOTH naming conventions for compatibility:

# Historical variable names (required by email_processor.py)
PROTON_USERNAME=your_email@pm.me
PROTON_PASSWORD=your_bridge_password_here

# Alternative naming (kept for compatibility)
PROTON_LUMO_IMAP_HOST=127.0.0.1
PROTON_LUMO_IMAP_PORT=1143
PROTON_LUMO_IMAP_USER=your_email@pm.me
PROTON_LUMO_IMAP_PASSWORD=your_bridge_password_here

# === Perplexity API ===
# Get your API key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxx
PROTON_LUMO_USE_LUMO=true

# === Processing Settings ===
# Dry run mode: test without moving emails (true/false)
PROTON_LUMO_DRY_RUN=false

# Process only unread emails (true/false)
PROTON_LUMO_UNSEEN_ONLY=true

# Maximum emails to process per folder
PROTON_LUMO_MAX_EMAILS_PER_FOLDER=100

# Maximum emails for Spam/Trash folders
PROTON_LUMO_MAX_SPAM_TRASH=10

# Polling interval in seconds (how often to check for new emails)
PROTON_LUMO_POLL_INTERVAL=60

# === Executive Summary Settings ===
# Enable/disable executive summary feature (true/false)
PROTON_LUMO_SUMMARY_ENABLED=true

# Hours (24h format) when to generate summaries (comma-separated)
# Example: 07,13,17 means summaries at 7AM, 1PM, and 5PM
PROTON_LUMO_SUMMARY_HOURS=07,13,17

# Minimum importance score to include in summary (0-100)
PROTON_LUMO_SUMMARY_MIN_SCORE=30

# Output format: console, email, or both
PROTON_LUMO_SUMMARY_FORMAT=email

# Email address to send summaries to
PROTON_LUMO_SUMMARY_EMAIL=your_email@gmail.com

# Target folder for executive summaries (will be created if not exists)
PROTON_LUMO_SUMMARY_FOLDER=Folders/Exec-Summary

# === Important Contacts (comma-separated emails) ===
# These contacts trigger +20 importance bonus
PROTON_LUMO_IMPORTANT_CONTACTS=contact1@example.com,contact2@example.com,contact3@example.com

# === Relocation Keywords (comma-separated) ===
# Messages containing these keywords get +10 importance bonus
PROTON_LUMO_RELOCATION_KEYWORDS=keyword1,keyword2,keyword3

# === Important Domains (comma-separated) ===
# Format: domain=score (e.g., company.com=20)
PROTON_LUMO_IMPORTANT_DOMAINS=company1.com:20,company2.com:15,school.edu:15

# === Logging ===
PROTON_LUMO_LOG_LEVEL=INFO
PROTON_LUMO_LOG_FILE=/home/yourusername/ProtonLumoAI/data/protonlumoai.log

# === Directories ===
# Use absolute paths to avoid systemd issues
PROTON_LUMO_CONFIG=/home/yourusername/ProtonLumoAI/config
PROTON_LUMO_DATA=/home/yourusername/ProtonLumoAI/data
PROTON_LUMO_MODELS=/home/yourusername/ProtonLumoAI/data/models

# === Feature Flags ===
PROTON_LUMO_ADAPTIVE_LEARNING=true
PROTON_LUMO_CHECKPOINT_ENABLED=true
PROTON_LUMO_CHECKPOINT_SAVE_INTERVAL=60
